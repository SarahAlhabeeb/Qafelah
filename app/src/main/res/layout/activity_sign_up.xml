<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/signpagebg"
    tools:context="com.example.sara.qafelah.SignUpActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="177dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/helloicon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
    android:text="ألديك حساب؟ سجّل دخولك"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/loginView"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/RegisterBtn"
        android:layout_alignStart="@+id/RegisterBtn"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/PnameEdit"
        android:hint="الاسم*"
        android:background="@mipmap/txtbg"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/passEdit"
        android:layout_alignStart="@+id/passEdit"
        android:layout_marginTop="12dp" />


    <EditText
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:textAlignment="center"
    android:inputType="textEmailAddress"
    android:ems="10"
        android:id="@+id/PemailEdit"
        android:hint="البريد الإلكتروني*"
        android:background="@mipmap/txtbg"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/PnameEdit"
        android:layout_alignStart="@+id/PnameEdit" />

    <EditText
        android:layout_width="247dp"
        android:layout_height="48dp"
    android:inputType="textPassword"
        android:textAlignment="center"
    android:ems="10"
        android:id="@+id/passEdit"
        android:hint="*كلمة المرور"
        android:background="@mipmap/txtbg"
        android:layout_above="@+id/confirmPassEdit"
        android:layout_alignLeft="@+id/confirmPassEdit"
        android:layout_alignStart="@+id/confirmPassEdit"
        android:layout_marginBottom="10dp" />

    <EditText
    android:layout_width="247dp"
    android:layout_height="48dp"
        android:inputType="textPassword"
    android:ems="10"
        android:id="@+id/confirmPassEdit"
        android:textAlignment="center"
        android:hint="*تأكيد كلمة المرور"
        android:background="@mipmap/txtbg"
        android:layout_above="@+id/passError"
        android:layout_centerHorizontal="true" />

    <Button
    android:text="تسجيل"
    android:layout_width="141dp"
    android:layout_height="48dp"
        android:id="@+id/RegisterBtn"
        android:background="@mipmap/signbtn"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_above="@+id/loginView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:text=""
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailError"
        android:textColor="?attr/colorAccent"
        android:layout_below="@+id/PemailEdit"
        android:layout_alignLeft="@+id/PemailEdit"
        android:layout_alignStart="@+id/PemailEdit" />

    <TextView
        android:id="@+id/passError"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RegisterBtn"
        android:layout_alignLeft="@+id/confirmPassEdit"
        android:layout_alignStart="@+id/confirmPassEdit"
        android:layout_marginBottom="11dp"
        android:text=""
        android:textColor="?attr/colorAccent"
 />

</RelativeLayout>
