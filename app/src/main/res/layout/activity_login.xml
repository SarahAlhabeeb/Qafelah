<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/mainpagebg"
    tools:context="com.example.sara.qafelah.LoginActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:hint="البريد الإلكتروني"
        android:layout_alignBottom="@+id/txtPass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignStart="@+id/txtEmail"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:backgroundTint="@color/white"

        />

    <Button
        android:text="تسجيل الدخول"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:id="@+id/btnLogin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="131dp"
        android:textColor="@android:color/white"
        android:background="@mipmap/signbtn"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="122dp"
        android:layout_height="96dp"
        app:srcCompat="@mipmap/icon"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/txtEmail"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/signUpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:text="هل أنت جديد هنا؟ أنشئ حسابًا"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_below="@+id/txtPass"
        android:layout_centerHorizontal="true"
        />


    />


</RelativeLayout>
