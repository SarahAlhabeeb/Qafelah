<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.sara.qafelah.MainActivity">


    <TextView
    android:text="ألديك حساب؟.. سجل دخولك"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/loginView"
    android:textSize="10sp"
    android:layout_below="@+id/RegisterBtn"
    android:layout_alignLeft="@+id/confirmPassEdit"
    android:layout_alignStart="@+id/confirmPassEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameEdit"
        android:layout_below="@+id/nameView"
        android:layout_alignRight="@+id/nameView"
        android:layout_alignEnd="@+id/nameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الاسم:"
        android:id="@+id/nameView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/RegisterBtn"
        android:layout_toEndOf="@+id/RegisterBtn"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="39dp" />

    <TextView
        android:text="البريد الإلكتروني"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailView"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/nameEdit"
        android:layout_alignRight="@+id/emailEdit"
        android:layout_alignEnd="@+id/emailEdit" />

    <TextView
    android:text="كلمة السر:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    android:id="@+id/passView"
        android:layout_below="@+id/emailEdit"
        android:layout_alignRight="@+id/passEdit"
        android:layout_alignEnd="@+id/passEdit" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:ems="10"
        android:id="@+id/emailEdit"
        android:layout_below="@+id/emailView"
        android:layout_alignLeft="@+id/nameEdit"
        android:layout_alignStart="@+id/nameEdit" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
        android:id="@+id/passEdit"
        android:layout_below="@+id/passView"
        android:layout_alignLeft="@+id/emailEdit"
        android:layout_alignStart="@+id/emailEdit" />

    <TextView
    android:text="تأكيد كلمة السر:"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/confirmPassView"
        android:layout_below="@+id/passEdit"
        android:layout_alignRight="@+id/passEdit"
        android:layout_alignEnd="@+id/passEdit"
        android:layout_marginTop="22dp" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
        android:id="@+id/confirmPassEdit"
        android:layout_below="@+id/confirmPassView"
        android:layout_alignRight="@+id/confirmPassView"
        android:layout_alignEnd="@+id/confirmPassView" />

    <Button
    android:text="سجل"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/RegisterBtn"
        android:layout_below="@+id/confirmPassEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEdit"
        android:layout_alignRight="@+id/emailEdit"
        android:layout_alignEnd="@+id/emailEdit"
        android:id="@+id/emailError" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passEdit"
        android:layout_alignRight="@+id/passEdit"
        android:layout_alignEnd="@+id/passEdit"
        android:id="@+id/passError" />

</RelativeLayout>
