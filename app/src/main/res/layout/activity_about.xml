<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/aboutpagebg"
    android:id="@+id/activity_about"
    tools:context="com.example.sara.qafelah.About">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="122dp"
        android:layout_height="96dp"
        app:srcCompat="@mipmap/aboutpicon"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="81dp"
        android:layout_above="@+id/txtAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />


    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="293dp"
        android:layout_height="220dp"
        android:text=""
        tools:layout_editor_absoluteY="223dp"
        tools:layout_editor_absoluteX="55dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txtCopyRights"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:text=""
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="223dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/txtAbout"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/btnmenu"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/menuslider"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />
</RelativeLayout>
